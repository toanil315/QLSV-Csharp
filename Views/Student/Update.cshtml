@model List<Class>;
@{
  ViewData["Title"] = "Update Student Page";
  var classes = Model;
  var student = ViewBag.Student;
}

<h1 class="display-4">Update Student</h1>
<form action="/Student/Save" method="POST">
  <div class="form-group">
    <label for="Id">Id</label>
    <input readonly value="@student.Id" type="text" class="form-control" id="Id" name="Id">
  </div>
  <div class="form-group">
    <label for="Name">Name</label>
    <input type="string" value="@student.Name" class="form-control" id="Name" name="Name" placeholder="Enter Name">
  </div>
  <div class="form-group">
    <label for="Age">Age</label>
    <input type="number" value="@student.Age" class="form-control" id="Age" name="Age" placeholder="Enter Age">
  </div>
  <div class="form-group">
    <label for="Birthday">Birthday</label>
    <input type="date" value="@string.Format("{0:yyyy-MM-dd}", student.Birthday)" class="form-control" id="Birthday"
      name="Birthday" placeholder="Enter Birthday">
  </div>
  <div class="form-group">
    <label for="Class">Class</label>
    <select class="form-control" id="ClassId" name="ClassId" placeholder="Select Class">
      @foreach (var classItem in classes)
      {
        @if (classItem.Id == student.ClassId)
        {
          <option selected value="@classItem.Id">@classItem.ClassName</option>
        }
        else
        {
          <option value="@classItem.Id">@classItem.ClassName</option>
        }
      }
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>